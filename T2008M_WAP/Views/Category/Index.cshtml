@{
    ViewBag.Title = "Category";
}
@model List<T2008M_WAP.Models.Category>


<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Category</h6>
            <a href="~/Category/Create" style="float:right;margin-top:-18px"><button class="btn btn-success">Create a Category</button></a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Action</th>
                            <th width="50">Edit</th>
                            <th width="50">Delete</th>
                        </tr>
                    </thead>
               
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="~/Category/Details/@item.Id">Detail</a>
                                    
                                    
                                </td>
                                <td style="text-align:center">
                                    <a href="~/Category/Edit/@item.Id">
                                        <i class="fas fa-fw fa-edit"></i>
                                    </a>
                                </td>
                                <td style="text-align:center">
                                    <a onlick="return confirm('Are you sure ?')" href="~/Category/Delete/@item.Id">
                                         <i class="fas fa-fw fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

